.container {
  padding: 20px;
  background-color: #07c160;
}

.form-item {
  margin-bottom: 20px;
}

label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

input {
  width: 100%;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

button {
  width: 100%;
  height: 40px;
  background-color: #07c160;
  color: rgb(46, 173, 80);
  border-radius: 4px;
}