.container {
  padding: 20px;
}

.form-item {
  margin-bottom: 20px;
}

label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

input {
  width: 100%;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

button {
  width: 100%;
  height: 40px;
  background-color: #a39c38;
  color: rgb(20, 9, 13);
  font-size: 20px;
  border-radius: 4px;
}